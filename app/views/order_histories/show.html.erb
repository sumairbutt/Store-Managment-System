<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <%= render @order_history %>
    <%= link_to "Edit this order_history", edit_order_history_path(@order_history), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this order_history", order_history_path(@order_history), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to "Back to order_histories", order_histories_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
