<div class="p-3">
  <div class="rounded overflow-hidden shadow-lg">
    <div class="px-6 py-4">
      <div class="p-3">
        <div id="<%= dom_id item %>">

          <!-- Display image in a round div -->
          <div class="rounded-full overflow-hidden w-16 h-16 mx-auto mb-4">
            <%= image_tag(item.image.attached? ? item.image : "favicon.png", class: "w-full h-full object-cover") %>
          </div>

          <p class="font-bold text-2xl">
            <%= item.menu&.title %>
          </p>

          <p class="flex items-center justify-between gap-3">
            <strong class="block font-medium mb-1">Name:</strong>
            <%= item.name %>
          </p>

          <p class="flex items-center justify-between gap-3">
            <strong class="block font-medium mb-1">Description:</strong>
            <span class="flex-1">
              <% item.description&.split(/\s+/).each_slice(6) do |words| %>
                <div class="whitespace-no-wrap">
                  <%= words&.join(' ') %>
                </div>
              <% end %>
            </span>
          </p>

          <p class="flex items-center justify-between gap-3">
            <strong class="block font-medium mb-1">Price:</strong>
            <%= item.price %>
          </p>

          <p class="flex items-center justify-between gap-3">
            <strong class="block font-medium mb-1">Available:</strong>
            <%= item.available %>
          </p>

          <% if action_name != "show" %>
            <%= link_to "Edit this item", edit_item_path(item), class: "rounded-lg mt-3 py-1 px-2 bg-blue text-white inline-block font-medium" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
